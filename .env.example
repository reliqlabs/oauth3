# Database
# SQLite (default):
DATABASE_URL=sqlite://dev.db
# Or Postgres (uncomment and set):
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/oauth3

# Server
APP_BIND_ADDR=127.0.0.1:8080
APP_PUBLIC_URL=http://127.0.0.1:8080

# Cookies / Sessions
# Base64-encoded 32 or 64 bytes. If omitted, the app will generate a random dev key each run.
# Generate a 64-byte key with: head -c 64 /dev/urandom | base64
# COOKIE_KEY_BASE64=

# Force Secure cookies (set true when serving over HTTPS behind a proxy)
APP_FORCE_SECURE=false

# OAuth/OIDC Providers
# Format: PROVIDER_<ID>_<FIELD>=value
# Only TYPE is required, other fields have defaults

# Google OIDC
PROVIDER_GOOGLE_TYPE=oidc
PROVIDER_GOOGLE_MODE=placeholder
PROVIDER_GOOGLE_CLIENT_ID=
PROVIDER_GOOGLE_CLIENT_SECRET=
PROVIDER_GOOGLE_ISSUER=https://accounts.google.com
PROVIDER_GOOGLE_SCOPES=openid profile email
PROVIDER_GOOGLE_API_BASE_URL=https://www.googleapis.com

# GitHub OAuth2
PROVIDER_GITHUB_TYPE=oauth2
PROVIDER_GITHUB_MODE=placeholder
PROVIDER_GITHUB_CLIENT_ID=
PROVIDER_GITHUB_CLIENT_SECRET=
PROVIDER_GITHUB_AUTH_URL=https://github.com/login/oauth/authorize
PROVIDER_GITHUB_TOKEN_URL=https://github.com/login/oauth/access_token
PROVIDER_GITHUB_SCOPES=read:user user:email
PROVIDER_GITHUB_API_BASE_URL=https://api.github.com

# Dex (local OIDC for development)
PROVIDER_DEX_TYPE=oidc
PROVIDER_DEX_MODE=live
PROVIDER_DEX_CLIENT_ID=oauth3-dev
PROVIDER_DEX_CLIENT_SECRET=dex-secret
PROVIDER_DEX_ISSUER=http://localhost:5556/dex
PROVIDER_DEX_SCOPES=openid email profile groups
PROVIDER_DEX_API_BASE_URL=http://localhost:5556
