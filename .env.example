# Database
# SQLite (default):
DATABASE_URL=sqlite://dev.db
# Or Postgres (uncomment and set):
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/oauth3

# Server
APP_BIND_ADDR=127.0.0.1:8080
APP_PUBLIC_URL=http://127.0.0.1:8080

# Cookies / Sessions
# Base64-encoded 32 or 64 bytes. If omitted, the app will generate a random dev key each run.
# Generate a 64-byte key with: head -c 64 /dev/urandom | base64
# COOKIE_KEY_BASE64=

# Force Secure cookies (set true when serving over HTTPS behind a proxy)
APP_FORCE_SECURE=false

# OAuth/OIDC Providers (placeholders; wire real credentials later)
# Google OIDC
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_ISSUER=https://accounts.google.com
AUTH_GOOGLE_MODE=placeholder

# GitHub OAuth2
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
AUTH_GITHUB_MODE=placeholder
